<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title | default: "Online Store" }}</title>
</head>
<body>
  <header class="site-header">
    <nav class="main-nav">
      <a href="/" class="logo">Store</a>
      <ul class="nav-links">
        {% for collection in collections %}
          <li><a href="/collections/{{ collection.id }}">{{ collection.title }}</a></li>
        {% endfor %}
      </ul>
      <div class="header-actions">
        {% if user.name %}
          <span class="user-greeting">Hello, {{ user.name | split: " " | first }}</span>
        {% endif %}
        <a href="/cart" class="cart-link">
          Cart ({{ cart.item_count | default: 0 }})
        </a>
      </div>
    </nav>
  </header>

  <main class="site-content">
    {% if featured_products %}
      <section class="featured-products">
        <h2>Featured Products</h2>
        <div class="product-slider">
          {% for product in featured_products %}
            <div class="slide">
              {% if product.images.size > 0 %}
                <img src="{{ product.images.first.src }}" alt="{{ product.images.first.alt }}">
              {% endif %}
              <h3>{{ product.title }}</h3>
              <p class="price">${{ product.price | divided_by: 100 }}</p>
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {% if collections %}
      <section class="collection-grid">
        <h2>Shop by Collection</h2>
        <div class="collections">
          {% for collection in collections %}
            <a href="/collections/{{ collection.id }}" class="collection-card">
              <h3>{{ collection.title }}</h3>
              <p>{{ collection.products.size }} products</p>
            </a>
          {% endfor %}
        </div>
      </section>
    {% endif %}
  </main>

  <footer class="site-footer">
    <div class="footer-content">
      <div class="footer-section">
        <h4>Contact</h4>
        <p>support@store.example.com</p>
      </div>
      <div class="footer-section">
        <h4>Shipping</h4>
        <p>Free shipping on orders over $100</p>
      </div>
    </div>
    <p class="copyright">&copy; 2024 Online Store. All rights reserved.</p>
  </footer>
</body>
</html>
