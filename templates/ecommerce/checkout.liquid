<div class="checkout">
  <h1>Checkout</h1>

  <div class="checkout-layout">
    <section class="shipping-info">
      <h2>Shipping Address</h2>
      <form class="address-form">
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" value="{{ user.name }}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" value="{{ user.email }}">
        </div>
        <div class="form-group">
          <label for="street">Street Address</label>
          <input type="text" id="street" value="{{ user.street }}">
        </div>
        <div class="form-row">
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" value="{{ user.city }}">
          </div>
          <div class="form-group">
            <label for="zip">ZIP Code</label>
            <input type="text" id="zip" value="{{ user.zip }}">
          </div>
        </div>
        <div class="form-group">
          <label for="country">Country</label>
          <input type="text" id="country" value="{{ user.country }}">
        </div>
      </form>
    </section>

    <section class="order-summary">
      <h2>Order Summary</h2>
      <ul class="order-items">
        {% for item in cart.items %}
          <li class="order-item">
            <span class="item-name">{{ item.product.title }} ({{ item.variant.title }})</span>
            <span class="item-qty">x{{ item.quantity }}</span>
            <span class="item-price">${{ item.price | divided_by: 100 }}</span>
          </li>
        {% endfor %}
      </ul>

      <div class="order-totals">
        <div class="subtotal">
          <span>Subtotal</span>
          <span>${{ cart.total_price | divided_by: 100 }}</span>
        </div>
        <div class="shipping">
          <span>Shipping</span>
          {% if cart.total_price > 10000 %}
            <span class="free">FREE</span>
          {% else %}
            <span>$9.99</span>
          {% endif %}
        </div>
        <div class="total">
          <span>Total</span>
          {% if cart.total_price > 10000 %}
            <span>${{ cart.total_price | divided_by: 100 }}</span>
          {% else %}
            {% assign total_with_shipping = cart.total_price | plus: 999 %}
            <span>${{ total_with_shipping | divided_by: 100 }}</span>
          {% endif %}
        </div>
      </div>

      <button type="submit" class="place-order">Place Order</button>
    </section>
  </div>
</div>
