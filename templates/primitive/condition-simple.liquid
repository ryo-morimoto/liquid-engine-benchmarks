{% if product.price > 5000 %}
  <span class="premium">Premium Product</span>
{% elsif product.price > 2000 %}
  <span class="standard">Standard Product</span>
{% else %}
  <span class="budget">Budget Product</span>
{% endif %}

{% if user.country == "Japan" %}
  <p>Domestic shipping available</p>
{% else %}
  <p>International shipping required</p>
{% endif %}

{% unless variant.available %}
  <span class="sold-out">Sold Out</span>
{% endunless %}
