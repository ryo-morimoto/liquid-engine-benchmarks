{% comment %}
Stress test: 50+ includes
Tests the template engine's partial/include performance
Note: This requires partials in templates/stress/partials/
{% endcomment %}

<div class="include-heavy">
  <header>
    {% include 'partials/header' %}
    {% include 'partials/nav' %}
    {% include 'partials/breadcrumb' %}
  </header>

  <main>
    {% include 'partials/hero' %}
    {% include 'partials/intro' %}

    <section class="products">
      {% for product in products limit: 10 %}
        {% include 'partials/product-card' %}
      {% endfor %}
    </section>

    {% include 'partials/divider' %}
    {% include 'partials/cta-banner' %}
    {% include 'partials/divider' %}

    <section class="features">
      {% include 'partials/feature-1' %}
      {% include 'partials/feature-2' %}
      {% include 'partials/feature-3' %}
      {% include 'partials/feature-4' %}
      {% include 'partials/feature-5' %}
    </section>

    {% include 'partials/testimonials' %}
    {% include 'partials/stats' %}
    {% include 'partials/partners' %}

    <section class="blog-preview">
      {% for post in posts limit: 5 %}
        {% include 'partials/post-card' %}
      {% endfor %}
    </section>

    {% include 'partials/newsletter' %}
    {% include 'partials/social-links' %}

    <section class="collections">
      {% for collection in collections %}
        {% include 'partials/collection-card' %}
      {% endfor %}
    </section>

    {% include 'partials/faq-section' %}
    {% include 'partials/contact-form' %}
    {% include 'partials/map' %}

    <section class="additional">
      {% include 'partials/widget-1' %}
      {% include 'partials/widget-2' %}
      {% include 'partials/widget-3' %}
      {% include 'partials/widget-4' %}
      {% include 'partials/widget-5' %}
      {% include 'partials/widget-6' %}
      {% include 'partials/widget-7' %}
      {% include 'partials/widget-8' %}
      {% include 'partials/widget-9' %}
      {% include 'partials/widget-10' %}
    </section>

    {% include 'partials/related-products' %}
    {% include 'partials/recently-viewed' %}
    {% include 'partials/recommendations' %}
  </main>

  <aside>
    {% include 'partials/sidebar-search' %}
    {% include 'partials/sidebar-categories' %}
    {% include 'partials/sidebar-tags' %}
    {% include 'partials/sidebar-recent' %}
    {% include 'partials/sidebar-popular' %}
    {% include 'partials/sidebar-ads' %}
  </aside>

  <footer>
    {% include 'partials/footer-about' %}
    {% include 'partials/footer-links' %}
    {% include 'partials/footer-contact' %}
    {% include 'partials/footer-social' %}
    {% include 'partials/footer-newsletter' %}
    {% include 'partials/footer-copyright' %}
  </footer>
</div>
