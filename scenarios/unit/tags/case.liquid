{%- comment -%}
Unit test: case/when tag
Measures switch-style conditional performance
{%- endcomment -%}
{% assign product = products | first %}
{% assign price_range = product.price | divided_by: 50 %}
{% case price_range %}
  {% when 0 %}
Budget: {{ product.title }}
  {% when 1 %}
Mid-range: {{ product.title }}
  {% when 2 %}
Premium: {{ product.title }}
  {% when 3 %}
Luxury: {{ product.title }}
  {% else %}
Ultra: {{ product.title }}
{% endcase %}
