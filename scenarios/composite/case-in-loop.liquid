{%- comment -%}
Composite test: case/when inside loop
Switch statement per iteration
{%- endcomment -%}
{% for product in products %}
  {% assign price_range = product.price | divided_by: 50 %}
  {% case price_range %}
    {% when 0 %}
<div class="budget">{{ product.title }}</div>
    {% when 1 %}
<div class="mid">{{ product.title }}</div>
    {% when 2 %}
<div class="premium">{{ product.title }}</div>
    {% else %}
<div class="luxury">{{ product.title }}</div>
  {% endcase %}
{% endfor %}
