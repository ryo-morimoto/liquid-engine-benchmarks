{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/ryo-morimoto/liquid-engine-benchmarks/schema/base.schema.json",
  "title": "Base Definitions",
  "description": "Shared definitions for benchmark schemas",
  "definitions": {
    "lang": {
      "type": "string",
      "enum": ["php", "ruby", "go", "rust", "javascript"],
      "description": "Supported programming language"
    },
    "semver": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version (e.g., 1.2.3)"
    },
    "runtimeVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$",
      "description": "Runtime version (e.g., 8.3 or 8.3.0)"
    },
    "libraryName": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Library name (lowercase, alphanumeric with hyphens)"
    }
  }
}
